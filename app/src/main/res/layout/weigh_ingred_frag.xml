<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/ingredWeight"
        android:layout_marginTop="22dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/ingredChecklist"
        android:layout_alignEnd="@+id/ingredChecklist" />

    <Button
        android:text="Tare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ingredZero"
        android:onClick=""
        android:layout_marginTop="31dp"
        android:layout_below="@+id/ingredWeight"
        android:layout_alignStart="@+id/ingredWeight" />

    <Button
        android:text="Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick=""
        android:id="@+id/save"
        android:layout_alignBaseline="@+id/ingredZero"
        android:layout_alignBottom="@+id/ingredZero"
        android:layout_alignEnd="@+id/ingredWeight" />
    
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/save"
        android:layout_margin="24dp"
        android:layout_marginBottom="36dp"
        android:id="@+id/ingredChecklist" />




</RelativeLayout>